<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LuxTripper Admin Panel</title>
    <!-- Font Awesome for icons -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <!-- Bootstrap CSS and JS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/admin.css" />
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- SweetAlert2 for popups -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Sortable.js for drag and drop functionality -->
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
  </head>
  <body>
    <div class="admin-container">
      <!-- Sidebar -->
      <aside class="sidebar" id="sidebar">
        <div class="sidebar-header">
          <a href="/admin/dashboard" class="logo">
            <span class="logo-text"
              >LUX<span class="logo-accent">TRIPPER</span></span
            >
          </a>
          <button id="sidebarToggle" class="sidebar-toggle">
            <i class="fas fa-bars"></i>
          </button>
        </div>

        <div class="sidebar-user">
          <% if (typeof user !== 'undefined') { %>
          <div class="user-avatar">
            <i class="fas fa-user"></i>
          </div>
          <div class="user-info">
            <div class="user-name"><%= user.name %></div>
            <div class="user-role"><%= user.role %></div>
          </div>
          <% } %>
        </div>

        <nav class="sidebar-nav">
          <div class="nav-section">
            <h3 class="nav-title">Main</h3>
            <ul class="nav-items">
              <li
                class="nav-item <%= locals.activePage === 'dashboard' ? 'active' : '' %>"
              >
                <a href="/admin/dashboard">
                  <i class="fas fa-tachometer-alt"></i>
                  <span>Dashboard</span>
                </a>
              </li>
              <li
                class="nav-item <%= locals.activePage === 'sections' ? 'active' : '' %>"
              >
                <a href="/admin/sections">
                  <i class="fas fa-layer-group"></i>
                  <span>Sections</span>
                </a>
              </li>
              <li
                class="nav-item <%= locals.activePage === 'create-page' ? 'active' : '' %>"
              >
                <a href="/admin/create-page">
                  <i class="fas fa-file-alt"></i>
                  <span>Create Page</span>
                </a>
              </li>
              <li
                class="nav-item <%= locals.activePage === 'pages' ? 'active' : '' %>"
              >
                <a href="/admin/pages">
                  <i class="fas fa-file-code"></i>
                  <span>Manage Pages</span>
                </a>
              </li>
              <% if (typeof user !== 'undefined' && user.role === 'admin') { %>
              <li
                class="nav-item <%= locals.activePage === 'users' ? 'active' : '' %>"
              >
                <a href="/admin/users">
                  <i class="fas fa-users"></i>
                  <span>Users</span>
                </a>
              </li>
              <% } %>
              <li
                class="nav-item <%= locals.activePage === 'profile' ? 'active' : '' %>"
              >
                <a href="/admin/profile">
                  <i class="fas fa-user-cog"></i>
                  <span>Profile</span>
                </a>
              </li>
            </ul>
          </div>

          <!-- Content Sections Navigation -->
          <% if (typeof sections !== 'undefined' && sections.length > 0) { %>
          <div class="nav-section">
            <h3 class="nav-title">Content Sections</h3>
            <ul class="nav-items content-sections">
              <% sections.forEach(section => { %>
              <li
                class="nav-item <%= locals.currentSection && locals.currentSection === section.name ? 'active' : '' %>"
              >
                <a href="/admin/sections/<%= section._id %>">
                  <i class="<%= section.icon %>"></i>
                  <span><%= section.displayName %></span>
                  <% if (!section.isActive) { %>
                  <span class="status-badge inactive">Hidden</span>
                  <% } %>
                </a>
              </li>
              <% }); %>
            </ul>
          </div>
          <% } %>

          <div class="nav-section">
            <ul class="nav-items">
              <li class="nav-item">
                <a href="/admin/logout">
                  <i class="fas fa-sign-out-alt"></i>
                  <span>Logout</span>
                </a>
              </li>
              <li class="nav-item">
                <a href="/" target="_blank">
                  <i class="fas fa-external-link-alt"></i>
                  <span>View Website</span>
                </a>
              </li>
            </ul>
          </div>
        </nav>
      </aside>

      <!-- Main Content -->
      <main class="main-content">
        <!-- Top Header -->
        <header class="top-header">
          <div class="header-left">
            <button id="mobileSidebarToggle" class="mobile-sidebar-toggle">
              <i class="fas fa-bars"></i>
            </button>
            <h1 class="page-title">
              <%= typeof pageTitle !== 'undefined' ? pageTitle : 'Admin Panel'
              %>
            </h1>
          </div>

          <div class="header-right">
            <% if (typeof user !== 'undefined') { %>
            <div class="user-dropdown">
              <button class="user-dropdown-toggle">
                <i class="fas fa-user-circle"></i>
                <span><%= user.name %></span>
                <i class="fas fa-chevron-down"></i>
              </button>
              <div class="user-dropdown-menu">
                <a href="/admin/profile">
                  <i class="fas fa-user-cog"></i>
                  <span>Profile</span>
                </a>
                <a href="/admin/logout">
                  <i class="fas fa-sign-out-alt"></i>
                  <span>Logout</span>
                </a>
              </div>
            </div>
            <% } %>
          </div>
        </header>

        <!-- Page Content -->
        <div class="page-content"><%- body %></div>
      </main>
    </div>

    <!-- Custom JavaScript -->
    <script src="/js/admin.js"></script>
  </body>
</html>
