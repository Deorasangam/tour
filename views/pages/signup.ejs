<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LuxTripper Admin - Sign Up</title>
    <!-- Font Awesome for icons -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/admin.css" />
  </head>
  <body>
    <div class="login-container">
      <div class="login-card">
        <div class="login-header">
          <div class="login-logo">
            LUX<span style="color: var(--secondary-color)">TRIPPER</span>
          </div>
          <div class="login-subtitle">Admin Registration</div>
        </div>

        <div class="login-body">
          <% if (typeof message !== 'undefined' && message) { %>
          <div class="login-message">
            <i class="fas fa-exclamation-circle"></i>
            <%= message %>
          </div>
          <% } %>

          <form class="login-form" action="/admin/signup" method="POST">
            <div class="form-group">
              <label for="name" class="form-label">Full Name</label>
              <div class="input-group">
                <input
                  type="text"
                  name="name"
                  id="name"
                  class="form-control"
                  placeholder="Enter your full name"
                  required
                />
                <div class="input-group-append">
                  <span class="input-group-text">
                    <i class="fas fa-user"></i>
                  </span>
                </div>
              </div>
            </div>

            <div class="form-group">
              <label for="email" class="form-label">Email</label>
              <div class="input-group">
                <input
                  type="email"
                  name="email"
                  id="email"
                  class="form-control"
                  placeholder="Enter your email"
                  required
                />
                <div class="input-group-append">
                  <span class="input-group-text">
                    <i class="fas fa-envelope"></i>
                  </span>
                </div>
              </div>
            </div>

            <div class="form-group">
              <label for="password" class="form-label">Password</label>
              <div class="input-group">
                <input
                  type="password"
                  name="password"
                  id="password"
                  class="form-control"
                  placeholder="Enter your password"
                  required
                />
                <div class="input-group-append">
                  <span class="input-group-text">
                    <i class="fas fa-lock"></i>
                  </span>
                </div>
              </div>
            </div>

            <div class="form-group">
              <label for="confirmPassword" class="form-label"
                >Confirm Password</label
              >
              <div class="input-group">
                <input
                  type="password"
                  name="confirmPassword"
                  id="confirmPassword"
                  class="form-control"
                  placeholder="Confirm your password"
                  required
                />
                <div class="input-group-append">
                  <span class="input-group-text">
                    <i class="fas fa-lock"></i>
                  </span>
                </div>
              </div>
            </div>

            <div class="form-group">
              <label for="signupCode" class="form-label"
                >Admin Signup Code</label
              >
              <div class="input-group">
                <input
                  type="password"
                  name="signupCode"
                  id="signupCode"
                  class="form-control"
                  placeholder="Enter admin signup code"
                  required
                />
                <div class="input-group-append">
                  <span class="input-group-text">
                    <i class="fas fa-key"></i>
                  </span>
                </div>
              </div>
              <small class="form-text text-muted"
                >This code is required to create an admin account</small
              >
            </div>

            <div class="form-group mt-4">
              <button type="submit" class="btn btn-primary">
                <i class="fas fa-user-plus"></i>
                Sign Up
              </button>
            </div>

            <div class="text-center mt-3">
              <a href="/admin/login">Already have an account? Login</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
