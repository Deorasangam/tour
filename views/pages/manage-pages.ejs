<%- include('../components/header', { pageTitle: 'Manage Pages' }) %>

<div class="page-intro">
  <div class="intro-content">
    <div class="intro-icon">
      <i class="fas fa-file-alt"></i>
    </div>
    <div class="intro-text">
      <h2>Manage Pages</h2>
      <p>View, edit, and manage the pages on your website</p>
    </div>
  </div>
</div>

<% if (message) { %>
<div
  class="alert <%= message.includes('success') ? 'alert-success' : 'alert-danger' %>"
>
  <%= message %>
</div>
<% } %>

<div class="card mb-4">
  <div class="card-header d-flex justify-content-between align-items-center">
    <div>
      <i class="fas fa-file-alt mr-1"></i>
      Pages
    </div>
    <div>
      <a href="/admin/create-page" class="btn btn-primary">
        <i class="fas fa-plus"></i> Create New Page
      </a>
    </div>
  </div>
  <div class="card-body">
    <% if (pages.length === 0) { %>
    <div class="alert alert-info">
      No pages found. <a href="/admin/create-page">Create your first page</a>.
    </div>
    <% } else { %>
    <div class="table-responsive">
      <table class="table table-hover align-middle">
        <thead class="table-light">
          <tr>
            <th>Page Name</th>
            <th>Size</th>
            <th>Last Modified</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% pages.forEach(function(page) { %>
          <tr>
            <td><%= page.name %></td>
            <td><%= (page.size / 1024).toFixed(2) %> KB</td>
            <td><%= page.lastModified.toLocaleString() %></td>
            <td>
              <div class="btn-group">
                <a
                  href="<%= page.path %>"
                  target="_blank"
                  class="btn btn-sm btn-outline-primary"
                >
                  <i class="fas fa-eye"></i> View
                </a>
                <button
                  type="button"
                  class="btn btn-sm btn-outline-success add-page-btn"
                  data-page-name="<%= page.name %>"
                  data-bs-toggle="modal"
                  data-bs-target="#addPageModal"
                >
                  <i class="fas fa-plus"></i> Add
                </button>
                <button
                  type="button"
                  class="btn btn-sm btn-outline-danger delete-page-btn"
                  data-page-name="<%= page.name %>"
                  data-bs-toggle="modal"
                  data-bs-target="#deletePageModal"
                >
                  <i class="fas fa-trash"></i> Delete
                </button>
              </div>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
    <% } %>
  </div>
</div>

<!-- Delete Page Modal -->
<div class="modal fade" id="deletePageModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header bg-danger text-white">
        <h5 class="modal-title">
          <i class="fas fa-exclamation-triangle"></i> Delete Page
        </h5>
        <button
          type="button"
          class="btn-close btn-close-white"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <p>
          Are you sure you want to delete this page? This action cannot be
          undone.
        </p>
        <p><strong>Page: </strong><span id="deletePageName"></span></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Cancel
        </button>
        <button type="button" id="confirmDeleteBtn" class="btn btn-danger">
          <i class="fas fa-trash"></i> Delete Page
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Add Page Modal -->
<div class="modal fade" id="addPageModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header bg-success text-white">
        <h5 class="modal-title">
          <i class="fas fa-plus-circle"></i> Add Page Content
        </h5>
        <button
          type="button"
          class="btn-close btn-close-white"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <form id="addPageForm">
          <div class="mb-3">
            <label for="pageTitle" class="form-label">Page Title</label>
            <input type="text" class="form-control" id="pageTitle" required />
          </div>
          <div class="mb-3">
            <label for="pageContent" class="form-label">Page Content</label>
            <textarea
              class="form-control"
              id="pageContent"
              rows="5"
              required
            ></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Cancel
        </button>
        <button type="button" id="confirmAddBtn" class="btn btn-success">
          <i class="fas fa-plus"></i> Add Content
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    // Handle delete page button click
    const deleteButtons = document.querySelectorAll(".delete-page-btn");
    const deletePageNameSpan = document.getElementById("deletePageName");
    const confirmDeleteBtn = document.getElementById("confirmDeleteBtn");

    deleteButtons.forEach(function (button) {
      button.addEventListener("click", function () {
        const pageName = this.getAttribute("data-page-name");
        deletePageNameSpan.textContent = pageName;

        // Update confirm button with page name
        confirmDeleteBtn.setAttribute("data-page-name", pageName);
      });
    });

    // Handle confirm delete button click
    confirmDeleteBtn.addEventListener("click", async function () {
      const pageName = this.getAttribute("data-page-name");
      this.disabled = true;
      this.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Deleting...';

      try {
        const response = await fetch(
          `/admin/delete-page/${pageName.replace(".html", "")}`,
          {
            method: "DELETE",
          }
        );

        const data = await response.json();

        if (data.success) {
          // Hide modal
          const deleteModal = bootstrap.Modal.getInstance(
            document.getElementById("deletePageModal")
          );
          deleteModal.hide();

          // Show success message and reload page
          const alertDiv = document.createElement("div");
          alertDiv.className = "alert alert-success";
          alertDiv.textContent = data.message || "Page deleted successfully";
          document.querySelector(".page-intro").after(alertDiv);

          setTimeout(() => {
            window.location.reload();
          }, 1500);
        } else {
          // Show error alert in modal
          const alertDiv = document.createElement("div");
          alertDiv.className = "alert alert-danger";
          alertDiv.textContent = data.message || "Failed to delete the page";
          document.querySelector(".modal-body").prepend(alertDiv);

          setTimeout(() => {
            alertDiv.remove();
          }, 5000);
        }
      } catch (error) {
        console.error("Error:", error);

        // Show error alert in modal
        const alertDiv = document.createElement("div");
        alertDiv.className = "alert alert-danger";
        alertDiv.textContent = "An unexpected error occurred";
        document.querySelector(".modal-body").prepend(alertDiv);

        setTimeout(() => {
          alertDiv.remove();
        }, 5000);
      } finally {
        // Reset button state
        this.disabled = false;
        this.innerHTML = '<i class="fas fa-trash"></i> Delete Page';
      }
    });

    // Handle add page button click
    const addButtons = document.querySelectorAll(".add-page-btn");
    const addPageNameSpan = document.getElementById("pageTitle");
    const confirmAddBtn = document.getElementById("confirmAddBtn");

    addButtons.forEach(function (button) {
      button.addEventListener("click", function () {
        const pageName = this.getAttribute("data-page-name");
        addPageNameSpan.value = pageName.replace(".html", "");
      });
    });

    // Handle confirm add button click
    confirmAddBtn.addEventListener("click", async function () {
      const pageTitle = document.getElementById("pageTitle").value;
      const pageContent = document.getElementById("pageContent").value;

      if (!pageTitle || !pageContent) {
        alert("Please fill in all fields");
        return;
      }

      this.disabled = true;
      this.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Adding...';

      try {
        const response = await fetch(`/admin/add-page-content/${pageTitle}`, {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ content: pageContent }),
        });

        const data = await response.json();

        if (data.success) {
          // Hide modal
          const addModal = bootstrap.Modal.getInstance(
            document.getElementById("addPageModal")
          );
          addModal.hide();

          // Show success message and reload page
          const alertDiv = document.createElement("div");
          alertDiv.className = "alert alert-success";
          alertDiv.textContent = data.message || "Content added successfully";
          document.querySelector(".page-intro").after(alertDiv);

          setTimeout(() => {
            window.location.reload();
          }, 1500);
        } else {
          // Show error alert in modal
          const alertDiv = document.createElement("div");
          alertDiv.className = "alert alert-danger";
          alertDiv.textContent = data.message || "Failed to add content";
          document.querySelector(".modal-body").prepend(alertDiv);

          setTimeout(() => {
            alertDiv.remove();
          }, 5000);
        }
      } catch (error) {
        console.error("Error:", error);

        // Show error alert in modal
        const alertDiv = document.createElement("div");
        alertDiv.className = "alert alert-danger";
        alertDiv.textContent = "An unexpected error occurred";
        document.querySelector(".modal-body").prepend(alertDiv);

        setTimeout(() => {
          alertDiv.remove();
        }, 5000);
      } finally {
        // Reset button state
        this.disabled = false;
        this.innerHTML = '<i class="fas fa-plus"></i> Add Content';
      }
    });
  });
</script>

<%- include('../components/footer') %>
