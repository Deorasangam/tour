<!-- This partial is responsible for rendering the top part of the page before the content -->
<!-- It receives the pageTitle variable from the parent template -->

<div class="page-header">
  <h1 class="page-title mb-3"><%= pageTitle %></h1>

  <% if (typeof breadcrumb !== 'undefined') { %>
  <nav class="breadcrumb-container" aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <a href="/admin/dashboard"><i class="fas fa-home"></i> Dashboard</a>
      </li>
      <% breadcrumb.forEach(item => { %> <% if (item.link) { %>
      <li class="breadcrumb-item">
        <a href="<%= item.link %>"><%= item.label %></a>
      </li>
      <% } else { %>
      <li class="breadcrumb-item active" aria-current="page">
        <%= item.label %>
      </li>
      <% } %> <% }); %>
    </ol>
  </nav>
  <% } %>
</div>

<% if (typeof alertSuccess !== 'undefined' && alertSuccess) { %>
<div class="alert alert-success">
  <i class="fas fa-check-circle"></i>
  <%= alertSuccess %>
</div>
<% } %> <% if (typeof alertError !== 'undefined' && alertError) { %>
<div class="alert alert-error">
  <i class="fas fa-exclamation-circle"></i>
  <%= alertError %>
</div>
<% } %> <% if (typeof alertWarning !== 'undefined' && alertWarning) { %>
<div class="alert alert-warning">
  <i class="fas fa-exclamation-triangle"></i>
  <%= alertWarning %>
</div>
<% } %> <% if (typeof alertInfo !== 'undefined' && alertInfo) { %>
<div class="alert alert-info">
  <i class="fas fa-info-circle"></i>
  <%= alertInfo %>
</div>
<% } %>
