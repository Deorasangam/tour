<% /** * Image Section Template * * Available variables: * - section: The entire
section object * - content: The section content object * - styles: Custom styles
for the section * - classes: Custom CSS classes */ // Default content if none
provided const defaultContent = { heading: "Image Section Heading", imageUrl:
"/public/images/placeholder.jpg", alt: "Image description", caption: "Image
caption text", alignment: "center" }; // Merge provided content with defaults
const sectionContent = {...defaultContent, ...(content || {})}; // Process
custom styles const customStyles = styles || {}; const styleString =
Object.entries(customStyles) .map(([key, value]) => `${key}: ${value}`) .join(';
'); // Process alignment classes let alignmentClass = 'text-center'; if
(sectionContent.alignment === 'left') { alignmentClass = 'text-start'; } else if
(sectionContent.alignment === 'right') { alignmentClass = 'text-end'; } %>

<section
  class="section image-section <%= classes %> <%= alignmentClass %>"
  style ="<%= styleString %>"
>
  <div class="container">
    <div class="section-content">
      <% if (sectionContent.heading) { %>
      <h2 class="section-heading"><%= sectionContent.heading %></h2>
      <% } %>

      <div class="section-image">
        <img
          src="<%= sectionContent.imageUrl %>"
          alt="<%= sectionContent.alt %>"
          class="img-fluid"
        />

        <% if (sectionContent.caption) { %>
        <p class="image-caption"><%= sectionContent.caption %></p>
        <% } %>
      </div>
    </div>
  </div>
</section>
